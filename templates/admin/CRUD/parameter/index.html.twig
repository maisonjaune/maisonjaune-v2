{% extends base_template %}

{% block list_table %}
    <div class="col-xs-12">

        {% include '@SonataTwig/FlashMessage/render.html.twig' %}

        <div class="sonata-ba-form">

            {{ form_start(form) }}

            <div class="box box-primary">
                <div class="box-header">
                    <h4 class="box-title">
                        {{ title }}
                    </h4>
                </div>
                <div class="box-body">
                    {% if form.vars.errors | length %}
                        <div class="alert alert-danger alert-dismissable">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true" aria-label="Fermer">
                                &times;
                            </button>
                            {{ form.vars.errors.current.message }}
                        </div>
                    {% endif %}

                    {{ form_widget(form) }}
                </div>
            </div>

            <div class="sonata-ba-form-actions well well-small form-actions">
                <button class="btn btn-success" type="submit">
                    <i class="fa fa-save" aria-hidden="true"></i> Mettre Ã  jour
                </button>
            </div>

            {{ form_end(form) }}

        </div>
    </div>
{% endblock %}